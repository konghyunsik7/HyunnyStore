@model IEnumerable<Product>

@section css{
    <link rel="stylesheet" href="~/css/IndexProduct.css" asp-append-version="true" />
}

 @{ 
    
}

<h2 id="header">Hyunny's Shop</h2>

 <div style="display: block">
     <a class="btn btn-danger" href="/Product/InsertProduct/">Create a New Product</a>
 </div>

@foreach (var product in Model)
{
<div id="ProductCard"  class="card" style="width: 18rem;">
  <img class="card-img-top" src="~/images/1.PNG" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">@product.Name</h5>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Price: @product.Price</li>
    <li class="list-group-item">Category: @product.CategoryID</li>
    <li class="list-group-item"> Stock: @product.StockLevel</li>
  </ul>
  <div class="card-body">
    <a href=/Product/ViewProduct/@product.ProductID>@product.ProductID</a>
    
  </div>
</div>

}
