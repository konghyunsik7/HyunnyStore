@model IEnumerable<Product>

@section css{
	<link rel="stylesheet" href="~/css/IndexProduct.css" asp-append-version="true" />

}

	<body id="body" style="background-image:url(/images/background3.jpg)">

		<h1 id="header1">
			HsK
			<svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-shop" viewBox="0 0 16 16">
				<path d="M2.97 1.35A1 1 0 0 1 3.73 1h8.54a1 1 0 0 1 .76.35l2.609 3.044A1.5 1.5 0 0 1 16 5.37v.255a2.375 2.375 0 0 1-4.25 1.458A2.371 2.371 0 0 1 9.875 8 2.37 2.37 0 0 1 8 7.083 2.37 2.37 0 0 1 6.125 8a2.37 2.37 0 0 1-1.875-.917A2.375 2.375 0 0 1 0 5.625V5.37a1.5 1.5 0 0 1 .361-.976l2.61-3.045zm1.78 4.275a1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0 1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0 1.375 1.375 0 1 0 2.75 0V5.37a.5.5 0 0 0-.12-.325L12.27 2H3.73L1.12 5.045A.5.5 0 0 0 1 5.37v.255a1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0zM1.5 8.5A.5.5 0 0 1 2 9v6h1v-5a1 1 0 0 1 1-1h3a1 1 0 0 1 1 1v5h6V9a.5.5 0 0 1 1 0v6h.5a.5.5 0 0 1 0 1H.5a.5.5 0 0 1 0-1H1V9a.5.5 0 0 1 .5-.5zM4 15h3v-5H4v5zm5-5a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1v-3zm3 0h-2v3h2v-3z" />
			</svg>
		</h1>

		<audio controls id="audio">
			<source src="~/audio/Talking to the Moon.mp3" type="audio/mpeg">

			Your browser does not support the audio element.
		</audio>
		<break />
		<div style="display: block; margin-left:85px;">
			<a class="btn btn-info" href="/Product/InsertProduct/">Create a New Product</a>
		</div>


		@foreach (var product in Model)
	{
		string imagesrc = "/images/" + product.ProductID + ".png";
		string formattedPrice = $"${string.Format("{0:n}", product.Price)}";
		string categoryName = "";
		switch (product.CategoryID)
		{
			case 1:
				categoryName = "Shoes";
				break;
			case 2:
				categoryName = "Socks";
				break;
			case 3:
				categoryName = "Pants/Shorts";
				break;
			case 4:
				categoryName = "Shirt/ButtonDown";
				break;
			case 5:
				categoryName = "Jacket/Hoodie";
				break;
			case 6:
				categoryName = "Jewelry";
				break;
			default:
				categoryName = "NA";
				break;

		}
		<div id="thecard">
			<div class="card d-flex justify-content-center rounded" style="width: 18rem; align-items: center;">
				<img class="card-img-top zoom" src=@imagesrc alt="Card image cap">
				<div class="card-body">
					<h5 class="card-title text-center"><a href=/Product/ViewProduct/@product.ProductID>@product.Name</a></h5>
				</div>
				<ul class="list-group list-group-flush">
					<li class="list-group-item">Price: @formattedPrice</li>
					<li class="list-group-item">@categoryName</li>
					<li class="list-group-item"> Stock: @product.StockLevel</li>
				</ul>
				<div class="card-body">
					@*ADD TO CART*@
					<button type="button" class="btn btn-primary" onclick="" href="">
						Add To Cart
						<svg xmlns="http://www.w3.org/2000/svg" width="30" height="24" fill="currentColor" class="bi bi-bag-heart" style="margin-bottom:7px;" viewBox="0 0 16 16">
							<path fill-rule="evenodd" d="M10.5 3.5a2.5 2.5 0 0 0-5 0V4h5v-.5Zm1 0V4H15v10a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V4h3.5v-.5a3.5 3.5 0 1 1 7 0ZM14 14V5H2v9a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1ZM8 7.993c1.664-1.711 5.825 1.283 0 5.132-5.825-3.85-1.664-6.843 0-5.132Z" />
						</svg>
					</button>
				</div>
			</div>
		</div>
	}


</body>

